{
  "name": "accountingbrains",
  "version": "1.0.0",
  "description": "AccountingBrains - Expert CPA Services Website",
  "scripts": {
    "dev": "pnpm run build:css && (pnpm run dev:eleventy & pnpm run dev:css)",
    "dev:eleventy": "eleventy --serve",
    "dev:css": "postcss src/css/styles.css --o _site/css/styles.css --watch",
    "build": "pnpm run build:eleventy && pnpm run build:css",
    "build:eleventy": "eleventy",
    "build:css": "mkdir -p _site/css && NODE_ENV=production postcss src/css/styles.css --o _site/css/styles.css",
    "generate:blog": "node scripts/generate-blog.js",
    "scrape:leads": "node scripts/scrape-leads.js"
  },
  "keywords": [
    "accounting",
    "cpa",
    "11ty",
    "tailwind"
  ],
  "author": "AccountingBrains",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "dotenv": "^16.3.1"
  }
}
