              <text x="150" y="48" text-anchor="middle" class="fill-white font-semibold" style="font-size: 14px;">Schedule Your Consultation</text>

              <!-- Calendar grid -->
              <g transform="translate(35, 80)">
                <!-- Days header -->
                <text x="0" y="0" class="fill-white/60" style="font-size: 10px;">Mon</text>
                <text x="38" y="0" class="fill-white/60" style="font-size: 10px;">Tue</text>
                <text x="76" y="0" class="fill-white/60" style="font-size: 10px;">Wed</text>
                <text x="114" y="0" class="fill-white/60" style="font-size: 10px;">Thu</text>
                <text x="152" y="0" class="fill-white/60" style="font-size: 10px;">Fri</text>
                <text x="190" y="0" class="fill-white/60" style="font-size: 10px;">Sat</text>
                <text x="228" y="0" class="fill-white/60" style="font-size: 10px;">Sun</text>

                <!-- Date cells -->
                {% for row in range(3) %}
                {% for col in range(7) %}
                {% set day = row * 7 + col + 1 %}
                {% if day <= 21 %}
                <rect x="{{ col * 33 }}" y="{{ row * 35 + 15 }}" width="28" height="28" rx="6"
                  fill="{% if day == 15 %}#059669{% else %}white{% endif %}"
                  fill-opacity="{% if day == 15 %}1{% else %}0.1{% endif %}"/>
                <text x="{{ col * 33 + 14 }}" y="{{ row * 35 + 34 }}" text-anchor="middle"
                  class="{% if day == 15 %}fill-white{% else %}fill-white/80{% endif %}"
                  style="font-size: 11px;">{{ day }}</text>
                {% endif %}
                {% endfor %}
                {% endfor %}
              </g>

              <!-- Selected time slot -->
              <rect x="35" y="190" width="230" height="20" rx="4" fill="white" fill-opacity="0.1"/>
              <circle cx="48" cy="200" r="5" fill="#059669"/>
              <text x="60" y="204" class="fill-white/80" style="font-size: 11px;">Selected: Jan 15, 2025 at 10:00 AM EST</text>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
