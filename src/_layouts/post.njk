---
layout: base.njk
---

<!-- Article Header -->
<article>
  <section class="gradient-bg py-12 md:py-20">
    <div class="container-custom max-w-4xl">
      <!-- Category -->
      {% if category %}
        <a href="{{ '/blog/' | url }}" class="inline-block bg-white/50 text-primary-700 px-4 py-2 rounded-full text-sm font-medium mb-4 hover:bg-white/75 transition-colors">
          {{ category }}
        </a>
      {% endif %}

      <!-- Title -->
      <h1 class="text-3xl md:text-5xl font-heading font-bold mb-6">{{ title }}</h1>

      <!-- Meta -->
      <div class="flex flex-wrap items-center gap-4 text-sm md:text-base text-gray-700">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <time datetime="{{ date }}">{{ date | dateDisplay }}</time>
        </div>
        {% if author %}
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <span>{{ author }}</span>
          </div>
        {% endif %}
        {% if readTime %}
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>{{ readTime }} min read</span>
          </div>
        {% endif %}
      </div>
    </div>
  </section>

  <!-- Featured Image -->
  {% if image %}
    <section class="py-8 md:py-12 bg-white">
      <div class="container-custom max-w-4xl">
        <img src="{{ image }}" alt="{{ title }}" class="w-full h-auto rounded-2xl shadow-lg">
      </div>
    </section>
  {% endif %}

  <!-- Article Content -->
  <section class="py-8 md:py-12 bg-white">
    <div class="container-custom max-w-4xl">
      <div class="prose prose-lg md:prose-xl max-w-none">
        {{ content | safe }}
      </div>
    </div>
  </section>

  <!-- Tags -->
  {% if tags %}
    <section class="py-8 md:py-12 bg-gray-50">
      <div class="container-custom max-w-4xl">
        <h3 class="text-lg font-bold mb-4">Tags:</h3>
        <div class="flex flex-wrap gap-2">
          {% for tag in tags %}
            {% if tag != "posts" %}
              <span class="bg-primary-100 dark:bg-gray-700 text-primary-700 dark:text-gray-300 px-3 py-1 rounded-full text-sm">{{ tag }}</span>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </section>
  {% endif %}

  <!-- CTA -->
  <section class="py-12 md:py-20 gradient-bg">
    <div class="container-custom max-w-4xl text-center">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4 px-4">Need Professional Accounting Help?</h2>
      <p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 mb-8 px-4">Our CPA team is ready to help your business succeed</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="{{ '/contact/' | url }}" class="btn btn-primary text-base md:text-lg">Schedule Consultation</a>
        <a href="{{ '/blog/' | url }}" class="btn btn-secondary text-base md:text-lg">Read More Articles</a>
      </div>
    </div>
  </section>
</article>
