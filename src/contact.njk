          <!-- Cal.com Embed - Replace YOUR_CAL_USERNAME with your actual Cal.com username -->
          <div class="cal-embed-container bg-gray-50 rounded-lg p-4 min-h-[500px]">
            <div id="cal-embed-placeholder" class="text-center py-12">
              <div class="animate-pulse">
                <div class="h-8 bg-gray-200 rounded w-3/4 mx-auto mb-4"></div>
                <div class="h-4 bg-gray-200 rounded w-1/2 mx-auto"></div>
              </div>
              <p class="text-sm text-gray-500 mt-6">Loading calendar...</p>
            </div>
          </div>

          <!-- Cal.com Inline Embed Script -->
          <script>
            (function () {
              // Replace YOUR_CAL_USERNAME with your actual Cal.com username
